{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "AxeOS Live!",
  "version": "1.0.0",
  "identifier": "com.axeos.live",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:9002",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "AxeOS Live!",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "AxeOS",
    "copyright": "Copyright Â© 2025 AxeOS",
    "category": "Utility",
    "shortDescription": "Monitor and manage your AxeOS miners",
    "longDescription": "AxeOS Live! is a desktop application for monitoring and managing your AxeOS-based Bitcoin miners with real-time stats and auto-tuning capabilities."
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/YOUR_USERNAME/YOUR_REPO/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "YOUR_PUBLIC_KEY_HERE"
    }
  }
}
